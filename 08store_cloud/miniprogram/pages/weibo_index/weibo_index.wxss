.container{
    background: #f2f2f2;
}

.container .weibo-group{
    width: 100%;
    margin-bottom:30rpx;
    background: #fff;
    padding:40rpx;
    box-sizing: border-box;
}

.weibo-group .user-group{
    display:flex;
}

.user-group .avatar{
    width:74rpx;
    height:74rpx;
    border-radius: 50%;

}

.user-group .right-info{
    flex:1;
    margin-left: 20rpx;

}

.right-info .username{
    font-size:28rpx;
    color:#323232;
}

.right-info .detail-info{
    font-size:24rpx;
    color:#656565;
    display:flex;
}

.detail-info .time{
    margin-right:20rpx;
}



.weibo-content-group{
  padding:30rpx;
}

.weibo-content-group .content{
  font-size:32rpx;
}

.weibo-handle{
  display:flex;
  padding-top:30rpx;
  font-size:28rpx;
}

.weibo-handle image{
  width:40rpx;
  height:40rpx;
  margin-right:20rpx;
}

.weibo-handle view{
  display: flex;
  flex:1;
  justify-content: center;
  align-items: center;
}


.weibo-content-group .image-list-group{
  padding-top: 20rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.image-list-group image{
  margin-bottom: 5rpx;
}


.write-weibo-btn{
  position: fixed;
  right:50rpx;
  bottom:100rpx;
  width:100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgb(116, 194, 223);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 100rpx;
  color:#fff;
  box-shadow: 0 0 5px rgba(0, 0, 0, 5);
}
.write-weibo-btn view{
  margin-top:-16rpx;
}

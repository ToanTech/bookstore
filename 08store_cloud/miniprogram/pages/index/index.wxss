.top-group{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background: #6DBAEC;
}

.search-group{
  width: 100%;
  height: 70rpx;
  background: #fff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius: 40rpx;
}

.search-group .search-icon{
  flex-basis: 20px;
}

.search-group .clear-icon{
  flex-basis: 20px;
}

.search-group .search-input{
  flex: 1;
  padding: 0 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.placeholder-input{
  font-size: 28rpx;
}




/*  */
.Hot_search_box{
  background-color: #6DBAEC;
  width:100%;
  height: 150rpx;
}

.Hot_search{
  display: flex;
  justify-content:space-around;
}
.search_hot{
  display: inline-block;
  padding: 10rpx;
  color:white;
  text-align: center;
  height: 20px;
  line-height: 20px;
  margin-left: 15px;
  background-color: rgb(27, 107, 160);
  border-radius: 20px;
}

.first_search{
  margin-left: 10px;
  color: white;
}



/* 轮播图 */
.banner{
  text-align: center;
  margin-top: -50rpx;
  height: 260rpx;
}
.banner image{
  height: 95%;
  width: 94%
}



/* 产品商标 */
.items_groups{

  width: 100%;
  
}

.items_groups .items{
  display: flex;
  justify-content: space-evenly;
  flex-wrap:wrap;
  padding: 40rpx 30rpx;
  background-color: #fff;
}


.items_groups .items .item{
  display: flex;
  flex-direction:column;
  text-align:center;
  line-height: 80rpx;
  width:140rpx;

}

.items_groups .items .item image{
  width: 100rpx;
  height: 100rpx;
  padding-left: 20rpx;
}




/* 热卖产品 */

.hot-items-title{
  font-size: 20px;
  font-weight: bold;
  margin-top: 20px;
}

.hot-items{
  background-color: #FFF;
  margin-left:10px;
  display: flex;
  justify-content: space-evenly;
  flex-wrap:wrap;
  margin-top: 30px;
}

.hot-items .item-message{
  display: flex;
  width: 170px;
  text-align: center;
  flex-direction:column;
}


.hot-items .item-message image{
  height: 200px;
  width: 100%;
}


.hot-items .hot-item-price{
  color: red;
  font-size: 10px;
}
.hot-items .hot-item-price text{
  margin-right: 10px;
}
.top-group{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background: #FF0000;
}

.search-group{
  width: 100%;
  height: 70rpx;
  background: #fff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius: 40rpx;
}

.search-group .search-icon{
  flex-basis: 20px;
}

.search-group .clear-icon{
  flex-basis: 20px;
}

.search-group .search-input{
  flex: 1;
  padding: 0 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.placeholder-input{
  font-size: 28rpx;
}


.hot-search{
  margin-top: 20rpx;
  color:red;
}

.hot-item{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  
}

.hot-item text{
  background-color:#F7F7F7;
  margin-top: 20rpx;
  margin-left: 20rpx;

}